{
  "name": "dr-sharp",
  "version": "0.1.0",
  "description": "A code-agnostic documentation generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "npm run build && ava",
    "coverage": "nyc --reporter=text-summary npm run test",
    "build": "tsc",
    "prepublish": "npm run lint && nyc --check-coverage --statements 100 npm run test"
  },
  "keywords": [
    "dr-sharp",
    "doc",
    "documentation",
    "generator",
    "cedsharp"
  ],
  "author": "CedSharp <cedascsharp@gmail.com> (https://cedsharp.ca)",
  "license": "LGPL-3.0",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@chatie/tsconfig": "^0.14.1",
    "@types/node": "^14.14.31",
    "ava": "^3.15.0",
    "cross-env": "^7.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  }
}
